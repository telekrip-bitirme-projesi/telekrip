<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dashboard.telekrip">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity  android:launchMode="singleInstance" android:name=".Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:launchMode="singleInstance" android:name=".Activity.RegisterActivity" />
        <activity android:launchMode="singleInstance" android:name=".Activity.MainActivity" />
        <activity android:launchMode="singleInstance" android:name=".Activity.ChatActivity" />
        <activity android:launchMode="singleInstance" android:name=".Activity.UserPanelActivity" />
        <activity android:launchMode="singleInstance" android:name=".Activity.ChangePasswordActivity"></activity>
    </application>

</manifest>